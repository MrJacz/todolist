{{#each ideas}}
<div class="card card-body mb-2 ">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
  <form method="post" action="/ideas/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
  </form>
</div>
{{else}}
<div class="jumbotron text-center">
  <h1 class="text-center mb-3">No Todo List, Go make a todo list!</h1>
  <a class="btn btn-primary mb-1" href="/ideas/add">Add Todo List</a>
</div>
{{/each}} 